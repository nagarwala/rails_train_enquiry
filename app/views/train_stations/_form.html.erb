<div class="container">
  <div class="row justify-content-center">
  <div class="col-10">
    <%= form_with(model: @train_station, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>

      <div class="form-group row">
        <%= f.label :train, class: "col-2 col-form-label text-light" %>
        <div class="col-10"> 
            <%= f.collection_select(:train_id, Train.all, :id, :train_name, 
                    {prompt: "Make your selection from the list below(can be empty"}) %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :station, class: "col-2 col-form-label text-light" %>
        <div class="col-10"> 
            <%= f.collection_select(:station_id, Station.all, :id, :name, 
                    {prompt: "Make your selection from the list below(can be empty"}) %>
        </div>
      </div>

      <div class="form-group row">
            <%= f.label :arrival_time, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
               <%= f.text_field :arrival_time, class: "form-control shadow rounded", placeholder: "Arrival time of train" %>
            </div>
      </div>

      <div class="form-group row">
            <%= f.label :departure_time, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
               <%= f.text_field :departure_time, class: "form-control shadow rounded", placeholder: "Departure time of train" %>
            </div>
      </div>

        <div class="form-group row justify-content-center">
        <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
   <% end %>
    </div>
    <div class="mb-3">
        <%= link_to '[ Cancel and return to trains listing ]', trains_path, class: "text-info" %>
    </div>
    </div>
</div> 