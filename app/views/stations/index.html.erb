<div class="container-fluid">
  <h1>Station List</h1>
  <table class="table table-bordered table-striped">
    <thead class="table-dark">
      <tr>
        <th>Station Name</th>
        <th>Location</th>
        <% if @current_user.admin? %>
          <th colspan="3">Actions</th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% @stations.each do |station| %>
        <tr>
          <td><%= station.name %></td>
          <td><%= station.location %></td>
          <td><%= link_to 'Edit', edit_station_path(station) if @current_user.admin? %></td>
          <td><%= link_to 'Delete', station, method: :delete, data: { confirm: 'Are you sure?' } if @current_user.admin? %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="flickr_pagination mb-4">
    <%= will_paginate @stations, :container => false %>
</div>
