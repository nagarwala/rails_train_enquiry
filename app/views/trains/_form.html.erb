<div class="container">
  <div class="row justify-content-center">
  <div class="col-10">
    <%= render 'shared/errors', obj: @train %>
    <%= form_with(model: @train, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
      <div class="form-group row">
            <%= f.label :train_no, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
               <%= f.text_field :train_no, class: "form-control shadow rounded", placeholder: "Enter the train number" %>
            </div>
      </div>

      <div class="form-group row">
            <%= f.label :train_name, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
               <%= f.text_field :train_name, class: "form-control shadow rounded", placeholder: "Enter the train name" %>
            </div>
      </div>

      <div class="form-group row">
            <%= f.label :starting_station, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
               <%= f.text_field :starting_station, class: "form-control shadow rounded", placeholder: "Enter the starting station" %>
            </div>
      </div>

        <div class="form-group row justify-content-center">
        <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
   <% end %>
    </div>
    <div class="mb-3">
        <%= link_to '[ Cancel and return to trains listing ]', trains_path, class: "text-info" %>
    </div>
    </div>
</div> 